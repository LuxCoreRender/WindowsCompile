  <Rule
    Name="QtDesignerUI"
    PageTemplate="tool"
    DisplayName="Qt UI Compiler"
    Order="200">
    <Rule.DataSource>
      <DataSource
        Persistence="ProjectFile"
        ItemType="QtDesignerUI" />
    </Rule.DataSource>
    <Rule.Categories>
      <Category
        Name="General"
        DisplayName="General" />
      <Category
        Name="Output"
        DisplayName="Output Files" />
      <Category
        Name="Command Line"
        Subtype="CommandLine"
        DisplayName="Command Line" />
    </Rule.Categories>
    <DynamicEnumProperty
      Name="QtDesignerUIBeforeTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False"
      DisplayName="Execute Before"
      Description="Specify a target to run Qt UIC before.">
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^QtDesignerUIBeforeTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
    </DynamicEnumProperty>
    <DynamicEnumProperty
      Name="QtDesignerUIAfterTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False"
      DisplayName="Execute After"
      Description="Specify a target to run Qt UIC after.">
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^QtDesignerUIAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
    </DynamicEnumProperty>
    <StringProperty
      Name="OutputDirectory"
      Category="Output"
      DisplayName="Output Directory"
      Description="Specifies the directory in which to place the output file."
      IncludeInCommandLine="False">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="QtDesignerUI"
          HasConfigurationCondition="False" />
      </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
      Name="OutputPrefix"
      Category="Output"
      DisplayName="Output File Prefix"
      Description="The filename prefix for the header file generated by the UIC compiler. Usually 'ui_'."
      IncludeInCommandLine="False">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="QtDesignerUI"
          HasConfigurationCondition="False" />
      </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
      Name="OutputPostfix"
      Category="Output"
      DisplayName="Output File Postfix"
      Description="The filename postfix for the header file generated by the UIC compiler. Usually none."
      IncludeInCommandLine="False">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="QtDesignerUI"
          HasConfigurationCondition="False" />
      </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
      Name="OutputExtension"
      Category="Output"
      DisplayName="Output File Extension"
      Description="The file extension for the header file generated by the UIC compiler. Usually '.hpp'"
      IncludeInCommandLine="False">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="QtDesignerUI"
          HasConfigurationCondition="False" />
      </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      IncludeInCommandLine="False"
      Visible="False" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      DisplayName="Additional Options"
      Description="Additional Options"
      Category="Command Line" />
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      IncludeInCommandLine="False"
      Visible="False" />
    <StringListProperty
      Name="Inputs"
      Category="Command Line"
      IsRequired="True" />
    <StringListProperty
      Name="Outputs"
      DisplayName="Outputs"
      IncludeInCommandLine="False"
      Visible="False" />
  </Rule>
